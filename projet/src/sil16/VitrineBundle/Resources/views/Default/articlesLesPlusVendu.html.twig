<h4>Articles les plus vendu</h4>
<ul class="list-group">
    {% for article in articles %}
    <li class="list-group-item">
        <div class="row">
            <div class="col-sm-8">{{ article.getLibelle }}</div>
            <div class="col-sm-4 data-price">{{ article.getPrice }}€</div>
        </div>
    </li>
    {% endfor %}
    <br>
    <form class="form-inline" action="{{ path('updateNbTopArticles') }}">
        <input class="hidden" name="stock">
        <div class="form-group table-data-form-quantity">
            <label>Nombre d'articles à afficher</label>
            <input name="quantity" id="input-quantity" class="form-control input-sm" type="number" min="1" max="10" value="1">
            <button type="submit" class="btn btn-default btn-xs">
                <span class="glyphicon glyphicon-repeat"></span>
            </button>
        </div>
    </form>
</ul>