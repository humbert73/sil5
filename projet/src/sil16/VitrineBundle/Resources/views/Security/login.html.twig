{% extends "sil16VitrineBundle::siteAdminLayout.html.twig" %}
{% block content %}
    {# src/sil16/VitrineBundle/Resources/views/Security/login.html.twig #}
    {% if error %}
        <div class="alert alert-danger">{{ error.message }}</div>
    {% endif %}

    <form class="form-horizontal" action="{{ path('login_check') }}" method="post">
        <div class="form-group">
            <label class="control-label col-sm-2" for="username">Login :</label>
            <div class="col-sm-4">
                <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required/>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="password">Mot de passe :</label>
            <div class="col-sm-4">
                <input class="form-control" type="password" id="password" name="_password" required/>
            </div>
        </div>
        {# Pour controler l'URL vers laquelle l'utilisateur est redirigé en cas de succès
            <input type="hidden" name="_target_path" value="/monCompte" />
        #}
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">login</button>
            </div>
        </div>
    </form>
{% endblock %}