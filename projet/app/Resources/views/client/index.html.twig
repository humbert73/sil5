{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <h1>Clients list</h1>

        <a class="btn btn-primary" href="{{ path('client_new') }}">
            <span class="glyphicon glyphicon-plus"></span> Create a new client</a>

        <table  class="table table-striped table-hover">
            <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Mail</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for client in clients %}
                <tr>
                    <td><a href="{{ path('client_show', { 'id': client.id }) }}">{{ client.id }}</a></td>
                    <td>{{ client.nom }}</td>
                    <td>{{ client.mail }}</td>
                    <td class="table-data-actions">
                        <div>
                            <a class="btn btn-info btn-xs" href="{{ path('client_show', { 'id': client.id }) }}">
                                <span class="glyphicon glyphicon-th-list"></span> details</a>
                        </div>
                        <div>
                            <a class="btn btn-primary btn-xs" href="{{ path('client_edit', { 'id': client.id }) }}">
                                <span class="glyphicon glyphicon-edit"></span> edit</a>
                        </div>
                        <div>
                            {{ form_start(delete_forms[loop.index-1]) }}
                            <button  class="btn btn-danger btn-xs" type="submit">
                                <span class="glyphicon glyphicon-remove"></span> Delete
                            </button>
                            {{ form_end(delete_forms[loop.index-1]) }}
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}




