{% extends 'base.html.twig' %}

{% block body %}

    {{ form_start(password_form, { 'attr': {'class': 'form-horizontal'} }) }}
    <div class="form-group">
        <label class="control-label col-sm-2" for="password1">{{ form_label(password_form.password.first) }}</label>
        <div class="col-sm-4">
            {{ form_widget(password_form.password.first, { 'attr': {'class': 'form-control', 'id': 'password1'} }) }}
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" for="password2">{{ form_label(password_form.password.second) }}</label>
        <div class="col-sm-4">
            {{ form_widget(password_form.password.second, { 'attr': {'class': 'form-control', 'id': 'password2'} }) }}
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            {{ form_start(password_form) }}
            <input class="btn btn-primary" type="submit" value="Changer de mot de passe" />
        </div>
    </div>
    {{ form_end(password_form) }}

{% endblock %}




