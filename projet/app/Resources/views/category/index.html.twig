{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid">
    <h1>Categories list</h1>

    <a class="btn btn-primary" href="{{ path('category_new') }}">
        <span class="glyphicon glyphicon-plus"></span> Create a new category</a>
    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>Libelle</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.getName }}</td>
                <td class="table-data-actions">
                    <div>
                        <a class="btn btn-info btn-xs" href="{{ path('category_show', { 'id': category.id }) }}">
                            <span class="glyphicon glyphicon-th-list"></span> Details</a>
                    </div>
                    <div>
                        <a class="btn btn-primary btn-xs" href="{{ path('category_edit', { 'id': category.id }) }}">
                            <span class="glyphicon glyphicon-edit"></span> Edit</a>
                    </div>

                    <div>
                        {{ form_start(delete_forms[loop.index-1]) }}
                        <button  class="btn btn-danger btn-xs" type="submit">
                            <span class="glyphicon glyphicon-remove"></span> Delete
                        </button>
                        {{ form_end(delete_forms[loop.index-1]) }}
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
{% endblock %}
